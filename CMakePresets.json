{
  "version": 3,
  "configurePresets": [
    {
      "name": "examples",
      "displayName": "Default Config",
      "description": "Default build with examples enabled",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/examples",
      "cacheVariables": {
        "TRAINS_BUILD_EXAMPLES": "ON",
        "BUILD_GAME": "OFF"
      }
    },
    {
      "name": "main",
      "displayName": "Game Build",
      "description": "Builds the Game",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/game",
      "cacheVariables": {
        "TRAINS_BUILD_EXAMPLES": "OFF",
        "BUILD_GAME": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Example Development",
      "configurePreset": "examples"
    },
    {
      "name": "Main Game",
      "configurePreset": "main"
    }
  ]
}